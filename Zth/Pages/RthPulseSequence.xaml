<pages:CommonPage x:Class="Zth.Pages.RthPulseSequence"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:pages="clr-namespace:Zth.Pages"
                  xmlns:local="clr-namespace:Zth"
      xmlns:vm="clr-namespace:Zth.VM" Loaded="Page_Loaded" Unloaded="CommonPage_Unloaded"
      mc:Ignorable="d" d:DataContext="{d:DesignInstance vm:RthPulseSequenceVM }" 
      
      xmlns:res="clr-namespace:Zth.Properties"
                  xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
                  xmlns:components="clr-namespace:Zth.Components"
      d:DesignHeight="1024" d:DesignWidth="1280"
      Title="RthPulseSequence">

    <Grid>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="{StaticResource RightPanelWidth}" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="../Resources/RightPanelStyles.xaml" />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGateVoltageVisible}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <TextBlock Grid.Column="0" Text="{x:Static res:Resource.AmplitudeControlCurrent }" />
                    <TextBox Grid.Column="1" Text="{Binding AmplitudeControlCurrent}" IsEnabled="{Binding RightPanelTextBoxsIsEnabled}"/>
                </Grid>

                <Grid Grid.Row="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="130"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGateVoltageVisible}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <TextBlock Grid.Column="0" Text="Напряжение затвора, В"/>
                    <ComboBox Grid.Column="1" SelectedIndex="0" ItemsSource="{Binding Source={x:Static local:StringResources.GateVoltageDictionary}}" SelectedValue="{Binding GateVoltage}" SelectedValuePath="Key" DisplayMemberPath="Value" IsEnabled="{Binding RightPanelTextBoxsIsEnabled}"/>
                </Grid>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Амплитуда измерительного тока, мА" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AmplitudeMeasuringCurrent}" IsEnabled="{Binding RightPanelTextBoxsIsEnabled}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Амплитуда греющего тока, А" />
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding AmplitudeHeatingCurrent}" IsEnabled="{Binding RightPanelTextBoxsIsEnabled}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Время задержки измерения ТЧП, мкс" />
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding DelayTimeTspMeasurements}" IsEnabled="{Binding RightPanelTextBoxsIsEnabled}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Длительность импульса, мс" />
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Path=DurationHeatingCurrentPulse,  ConverterParameter='100.1' }" IsEnabled="{Binding RightPanelTextBoxsIsEnabled}"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Длительность паузы между импульсами, мс" />
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding PauseDuration}" IsEnabled="{Binding RightPanelTextBoxsIsEnabled}"/>

                <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ButtonRightPanelGreen}" Click="StartHeating_Click" IsEnabled="{Binding StartHeatingButtonIsEnabled}" Content="{Binding StartHeatingContent}" />

                <Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ButtonRightPanelBlue}" Click="RecordingResults_Click"  IsEnabled="{Binding RecordingResultsButtonIsEnabled}" Content="Фиксация результатов" />

                <Button Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ButtonRightPanelRed}" Click="StopHeating_Click" IsEnabled="{Binding StopHeatingButtonIsEnabled, Mode=OneWay}" Content="{x:Static res:Resource.StopHeating}" />
            </Grid>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <components:Chart x:Name="Chart" Grid.Row="0"/>

                <components:BottomCheckBoxsAndTable HorizontalAlignment="Center" Grid.Row="1">

                </components:BottomCheckBoxsAndTable>
            </Grid>
        </Grid>
    </Grid>
</pages:CommonPage>
