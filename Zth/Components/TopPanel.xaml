        <Grid Height="{StaticResource TopPanelHeight}" VerticalAlignment="Top" Grid.Column="1" Visibility="{Binding DataIsVisibly}">
            <Grid.Resources>
                <Style TargetType="TextBlock" x:Key="ValueTextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                    <Setter Property="Margin" Value="10,0,0,0" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock TextWrapping="Wrap" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Text="{Binding WorkingModeString, Converter={StaticResource TLB}}" Visibility="{Binding WorkingModeIsVisible, Converter={StaticResource B2VH}}" />

            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding TypeCoolingString}" Visibility="{Binding TypeCoolingIsVisible, Converter={StaticResource B2VH}}"/>
            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding TypeDeviceString}" Visibility="{Binding TypeDeviceIsVisible, Converter={StaticResource B2VH}}" />

            <TextBlock Grid.Row="0" Grid.Column="5" Visibility="{Binding AnodeBodyTemperatureIsVisible, Converter={StaticResource B2VH}}" >
                <Run Text="{x:Static res:Resource.AnodeBodyTemperatureAbbreviated}"/> <Run Text=" " /> <Run Text="{Binding AnodeBodyTemperature}" FontWeight="Bold" /> <Run Text="{x:Static res:Resource.UnitMeasurementDegreeCentigrade}" />
            </TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="5" Visibility="{Binding CathodeBodyTemperatureIsVisible, Converter={StaticResource B2VH}}">
                <Run Text="{x:Static res:Resource.CathodeBodyTemperatureAbbreviated}"/> <Run Text=" " /> <Run Text="{Binding CathodeBodyTemperature}" FontWeight="Bold" /> <Run Text="{x:Static res:Resource.UnitMeasurementDegreeCentigrade}" />
            </TextBlock>

            <TextBlock Grid.Row="0" Grid.Column="8" Visibility="{Binding AnodeCoolerTemperatureIsVisible, Converter={StaticResource B2VH}}">
                <Run Text="{x:Static res:Resource.AnodeCoolerTemperatureAbbreviated}" /> <Run Text=" " /> <Run Text="{Binding AnodeCoolerTemperature}" FontWeight="Bold" /> <Run Text="{x:Static res:Resource.UnitMeasurementDegreeCentigrade}" />
            </TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="8" Visibility="{Binding CathodeCoolerTemperatureIsVisible, Converter={StaticResource B2VH}}">
                 <Run Text="{x:Static res:Resource.CathodeCoolerTemperatureAbbreviated}" />  <Run Text=" " /> <Run Text="{Binding CathodeCoolerTemperature}" FontWeight="Bold" /> <Run Text="{x:Static res:Resource.UnitMeasurementDegreeCentigrade}" />
            </TextBlock>

            <TextBlock Grid.Row="0" Grid.Column="11" Visibility="{Binding TemperatureSensitiveParameterIsVisible, Converter={StaticResource B2VH}}">
                    <Run Text="{x:Static res:Resource.TemperatureSensitiveParameter}" /> <Run Text=":" />  <Run Text="    " /> <Run Text="{Binding TemperatureSensitiveParameter}" FontWeight="Bold" /> <Run Text="{x:Static res:Resource.MegaVoltUnit}" />
            </TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="11" Visibility="{Binding HeatingCurrentIsVisible, Converter={StaticResource B2VH}}">
                <Run Text="{x:Static res:Resource.HeatingCurrentAbbreviated}" /> <Run Text=" " /> <Run Text="{Binding HeatingCurrent}" FontWeight="Bold" /> <Run Text="{x:Static res:Resource.AmpereUnit}" />
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
